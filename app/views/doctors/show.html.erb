<h1><%= @doctor.name %></h1>
<br>
<h2>Appointments:</h2>
<ul>
<% @doctor.appointments.each do |a| %>
<% @doctor_patient = @doctor.patients.find(a.patient_id) %>
<li><%= a.appointment_datetime.strftime("%B %d, %Y at %H:%M") %><%= link_to @doctor_patient.name, patient_path(@doctor_patient) %></li>
<% end %>
</ul>