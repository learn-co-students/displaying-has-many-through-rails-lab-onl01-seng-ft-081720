<h1>Dr. <%= @doctor.name %></h1>

<h2><%= @doctor.department %></h2>

<h3>Appointments:</h3>
<ul>
    <% @doctor.appointments.each do |appt| %>
        <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
        <%= link_to appt.patient.name, patient_path(appt.patient.id) %><br>
    <% end %>
</ul>