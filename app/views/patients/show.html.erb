<h1><%= @patient.name %></h1>
<h2><%= @patient.age %>

<ul>
<% @patient.appointments.each do |appt| %>
    <li>
    <% @patient_doctor = @patient.doctors.find(appt.doctor_id) %>
    <%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appt) %> | <%= link_to @patient_doctor.name, doctor_path(@patient_doctor) %><br>
    </li>
<% end %>
</ul>