<h1><%= @patient.name %></h1>
<br>
<h2>Appointments:</h2>
<ul>
<% @patient.appointments.each do |a| %>
<% @doctor_patient = @patient.doctors.find(a.doctor_id) %>
<li><%= a.appointment_datetime.strftime("%B %d, %Y at %H:%M") %><%= link_to @doctor_patient.name, doctor_path(@doctor_patient) %></li>
<% end %>
</ul>